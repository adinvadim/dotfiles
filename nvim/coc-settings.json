{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "html",
    "vue",
    "javascript",
    "javascript.jsx",
    "json",
    "typescript",
    "typescript.tsx"
    "markdown"
  ],
  "tsserver.formatOnType": false,
  "languageserver": {
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {},
      "settings": {}
    }
  },
  "tailwindCSS.headwind.runOnSave": true,
  "coc.source.file.ignoreHidden": true,
  "workspace.rootPatterns": [".git", "tailwind.config.js"],
  "tailwindCSS.files.exclude": [
    "**/.git/**",
    "**/node_modules/**",
    "**/.hg/**",
    "**/.svn/**",
    "**/.nuxt/tailwind.config.cjs"
  ]
}
